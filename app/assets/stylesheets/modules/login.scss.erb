.login-user-page {
  background-image: url("<%= asset_url("nichinanbaseballIMGL9883_TP_V.jpg") %>");
  height: 100vh;
  background-size: cover;
  position: relative;
  .login-user-form {
    box-shadow: 0 0 10px -1px rgba(0, 0, 0, 0.36);
    color: #555555;
    font-size: 20px;
    text-align: center;
    height: 450px;
    width: 30vw;
    margin-left: 35vw;
    margin-top: 15vh;
    background-color: white;
    opacity: 0.93;
    position: absolute;
    border-radius: 3px;
    padding: 20px;
    .app-name-icon {
      font-size: 28px;
      margin: 0;
      i {
        line-height: 72px;
        font-size: 24px;
        margin-right: 7px;
        cursor: pointer;
        color: #ea352d;
      }
      .title {
        font-family: 'Amatic SC', cursive;
        cursor: pointer;
        color: #ea352d;
        font-weight: bold;
      }
    }
    .login-field {
      .login-user {
        width: 20vw;
        height: 30px;
        margin-bottom: 20px;
        margin-top: 10px;
        border-radius: 3px;
        font-size: 15px;
      }
      .login-user-btn {
        height: 40px;
        margin-top: 30px;
        color: #ea352d;
        font-weight: bold;
        font-size: 18px;
        cursor: pointer;
        margin-bottom: 20px;
      }
      .login-user-btn:hover {
        background-color: lightgray;
      }
    }
  }
}
