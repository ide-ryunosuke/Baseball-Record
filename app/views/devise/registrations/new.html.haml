.new-user-page
  .new-user-form
    %h2
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .app-name-icon
        = link_to root_path do
          %i.fa.fa-baseball-ball
        = link_to root_path ,class: 'title' do
          Baseball Record
      .new-field
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "new-user"
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length}文字以上)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: 'new-user'
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "new-user"
        .actions
          = f.submit "新規登録", class: "new-user new-user-btn"
    = render "devise/shared/links"
